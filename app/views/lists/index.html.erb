<div class = "home-banner">
<h1>Save any kind of movies</h1>
<p><span id="banner-typed-text"></span>
</p>
</div>
<div class="list-container">
<h1>My list 🎬</h1>
</div>
<div class="d-flex justify-content-around my-box-light flex-wrap mb-2">
<% @lists.each do |list|%>
 <div class="card bg-dark text-white">
  <img class="card-img" <%= image_tag list.photo, :width => '100%', :height => '200px', class: "photo" %> 
  <div class="card-img-overlay">
    <h5 class="card-title"><%= link_to list.name, list_path(list), class: "white-text" %></h5>
    <p class="item">
    <%= link_to edit_list_path(list) do%>
      <i class="far fa-edit"></i>
      <% end %>
    </p>
    <p>
    <%= link_to list_path(list), method: :delete do%>
    <i class="fas fa-trash-alt"></i>
    <% end %>
    </p>
  </div>
</div>
 <% end %>
 </div>
 

 
   