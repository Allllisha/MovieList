<div class = "home-banner">
<h1>Save any kind of movies</h1>
<p><span id="banner-typed-text"></span>
</p>
</div>

<div class ="list-container">
<h1>My list</h1>
<div class = "d-flex justify-content-around flex-wrap my-box-light mb-2">
<% @lists.each do |list|%>
<div class="card" style="width: 18rem;">
  <%= image_tag list.photo, :width => '100%', :height => '200px', class: "photo" %>
  <div class="card-body">
    <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
     <%= link_to edit_list_path(list) do %>
      <i class="far fa-edit"></i>
      <% end %>
    <%= link_to list_path(list), method: :delete do%>
      <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
   <% end %>
   </div>
   </div>