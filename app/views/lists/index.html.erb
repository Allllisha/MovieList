<div class = "home-banner">
<div class = "hb-container">
 <% if user_signed_in? %>
<h1><%= current_user.first_name %>'s Movie list</h1>
</div>
<% end %>
</div>


<div class = "d-flex justify-content-around my-box-light flex-wrap mb-2">
<% @lists.each do |list| %>
<div class="card bg-dark text-white">
   <%= image_tag list.photo, class: "card-img" %>
  <div class="card-img-overlay">
    <h4 class="card-title"> <%= link_to list.name, list_path(list), class: "white-text" %></h4>
       <p class="item">
    <%= link_to edit_list_path(list) do%>
      <i class="far fa-edit"></i>
      <% end %>
    <%= link_to list_path(list), method: :delete do%>
    <i class="fas fa-trash-alt"></i>
    <% end %>
     </p>
  </div>
</div>
 <% end %>
</div>




