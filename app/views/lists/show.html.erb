<div class ="card-category">
<h1><%= @list.name %></h1>
<p><span id="banner-typed-text"></span>
</div>


<div class="container">
  <div class="card-show-title">
    <h1>Movies 🎬</h1>
    <p><%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-outline-dark" %></p>
  </div>

    

    <div class="turn-container">
		<header>
		</header>
		<main>
			<div class = "flipbook" id="flipbook">
      <% @list.bookmarks.each do |bookmark| %>
				<div class = "page one">
        <div class ="list-title">
        <h1><%= @list.name %></h1>
        </div>
				</div>
				<div class = "page two">
				<%= image_tag bookmark.movie.poster_url, alt: "movie poster" %>
				</div>
				<div class = "page three">
        <div class = description>
        <h3><%= bookmark.movie.title %></h3>
         <h5><%= "⭐️" * bookmark.movie.rating %></h5>
        <p><%= bookmark.movie.overview %></p>
        </div>
				</div>
        <div class = "page five">
        <div class ="container-comment">
				<h1><i class="fas fa-quote-left"></i><%= bookmark.comment %></h1>
        </div>
        <div class ="delete-contaner">
         <%= link_to "Delete?", bookmark_path(bookmark), method: :delete %>
        </div>
				</div>
        <% end %>
        </div>
		</main>
	</div>


  <div class="row">
     <hr>
      <div class="col-6 part-a">
      <% @reviews.each do |review|%>
       <h3><%=  "⭐️" * review.rating %></h3>
      <h5><%= review.content %><h5>
       <%= link_to "delete", review_path(review), method: :delete %>
      <hr>
       <% end %>
      </div>
      <div class="col-6 part-b">
        <div class="movie-form">
         <h3>Review for list</h3>
          <%= simple_form_for [@list, @review] do |f| %>
<%= f.input :content, placeholder: 'Add your comment' %>
<%= f.association :list, input_html: { class: 'select2' } %>
<select id="example">
  <option value="1">1</option>
  <option value="2">2</option>
  <option value="3">3</option>
  <option value="4">4</option>
  <option value="5">5</option>
</select>

<%= f.input :rating, placeholder: 'Add your rating', collection: 1..5, id: "example"   %>
<%= f.submit "Add review", class: "btn btn-outline-dark" %>
<% end %>
        </div>
     </div>
</div>
　　　　<div class="row">
      <div class="col-12">
        <hr>
        <div class="new-movie-form">
         <h3>Add a new movie</h3>
         <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment, placeholder: 'Add your comment' %>
      <%= f.association :movie, input_html: { class: 'select2' } %>
      <%= f.submit "Add movie", class: "btn btn-outline-dark" %>
      <% end %>
    </div>
  </div>
</div>




    </div>
  </div>
</div>