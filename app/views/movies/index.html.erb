 <div class="movie-banner">
 <div class="movie-wrapper d-flex justify-content-around my-box-light flex-wrap mb-2">
    <% @movies.each do |movie| %>
      <div class="search-container-glass">
        <%= image_tag movie.poster_url, :width => '300px', :height => '200px', alt: "movie poster", class: "img" %>
        <p class="movie-card-text">
          <div class="d-flex">
            <h4><i class="fas fa-star"></i></h4>
            <h4><%= movie.rating %></h4>
            <h5>/10</h5>
          </div>
          <h6><%= movie.title %></h6>
          <button class="btn"><%= link_to "Discover", movie_path(movie), class: "white-text" %></button>
        </p>
      </div>
   
    <% end %>
  </div>
 </div>

<div class="movie-search-container">
<div class="d-flex">
  <%= form_tag movies_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a movie"
    %>
    <%= submit_tag "Search", class: "btn btn-primary"%>
   <% end %>  
  </div>
</div>

