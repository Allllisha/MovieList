<div class="movie-banner">

<h2>Cinema</h2>
<%= form_tag movies_path, method: :get do %>
<div class ="search-tag">
  <%= text_field_tag :query,params[:query], class: "form-control", placeholder: "Find a movie"%><%= submit_tag "Search", class: "btn btn-outline-dark" %>
<% end %>
</div>
</div>

<div class="list-container">
<h1>Movies 🎬</h1>
</div>

<div class="movie-wrapper d-flex justify-content-around my-box-light flex-wrap mb-2">
<% @movies.each do |movie| %>
<div class="container-glass">
  <%= image_tag movie.poster_url, :width => '300px', :height => '200px', alt: "movie poster", class: "img" %>
  <p class="text">
    <h4><%= movie.title %></h4>
    <p><%= "⭐️" *  movie.rating %></p>
    <%= movie.date %>
    <button class="btn">Discover</button>
  </p>
</div>
<% end %>
</div>


